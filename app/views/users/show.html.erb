<%= render 'user', user: @user %>
<%= render '/books/list', book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
      　     <tr>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Show", book_path(book.id), class: "btn btn-succese text-white" %></td>
              <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
    　　      </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
