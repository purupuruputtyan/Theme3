<div class="container">
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>
  <!--ユーザー画像-->
  <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><!--%= @user.name %--></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><!--%= @user.introduction %--></th>
          </tr>
        </tbody>
      </table>
    <div class="row">
        <!--%= link_to edit_book_path(@book.id) do %-->
          <i class="fas fa-users"></i>
        <!--% end %-->
      </div>
    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <div class="form-group">
          <label>Title</label>
          <div>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <div>
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="action">
          <%= f.submit 'Create Book', class: "btn bg-success text-white" %>
        </div>
      <% end %>
