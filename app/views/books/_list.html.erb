    <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: books_path, method: :post do |f| %>
        <div class="form-group">
          <label>Title</label>
          <div>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <div>
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="action">
          <%= f.submit 'Create Book', class: "btn bg-success text-white" %>
        </div>
      <% end %>
