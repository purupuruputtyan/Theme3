<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="field">
          <label>Title</label>
          <div><%= f.text_field :title %></div>
        </div>
        <div class="field">
          <label>Opinion</label>
          <div><%= f.text_area :body %></div>
        </div>
          <div class="action">
          <%= f.submit 'Update Book', class: "btn btn-success text-white" %>
        </div>
      <% end %>

    </div>
  </div>
</div>