<div class="text-success">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/user', user: @user %>
      <%= render 'list', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title, book_path(@user.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete %></td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>


