<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/user', user: @user %>
      <%= render 'list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>


